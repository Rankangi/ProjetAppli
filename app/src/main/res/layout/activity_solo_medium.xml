<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.insacvl.educations.SoloActivityEasy">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-133dp">

        <ImageView
            style="@style/DarkModeHidden"
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_topbk" />

        <TextView
            android:id="@+id/countown_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="30"
            android:textSize="30dp"/>

        <EditText
            android:layout_centerVertical="true"
            android:id="@+id/getTheWordMedium"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="11dp"
            android:ems="10"
            android:background="@drawable/round_edittext_purple"
            android:gravity="center"
            android:hint="Donne la bonne orthographe du mot"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/speechButtonMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="300px"
            android:background="@drawable/home_gradient_button_yellow"
            android:text="Ecoute et Ã©cris ce mot" />

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp">
            <ProgressBar
                android:id="@+id/progressBarIDMedium"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:indeterminate="false"
                android:progressDrawable="@drawable/progress_bar_v2"
                android:background="@drawable/progress_bar_v2_background"
                style="?android:attr/progressBarStyleHorizontal"
                android:max="100"
                android:progress="0" />
            <TextView
                android:id="@+id/txtProgressIDMedium"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="20dp"
                android:text="0"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/textView2Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="800px"
            android:layout_marginTop="50px"
            android:text="Moyen" />

        <TextView
            android:id="@+id/hintTextMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginLeft="420px"
            android:layout_marginTop="600px"
            android:gravity="center"
            android:text="" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>