<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.insacvl.educations.activitySolo.SoloActivityMotSemaine">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      tools:layout_editor_absoluteX="0dp"
      tools:layout_editor_absoluteY="-133dp">

    <ImageView
        style="@style/DarkModeHidden"
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_topbk"
        android:contentDescription="Background" />

    <TextView
        android:id="@+id/countown_hard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="30"
        android:textSize="30sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/getTheWordHard"
        android:layout_marginTop="25dp"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#F44336"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="Attention tu n'as qu'une seule tentative par mot !"/>

    <EditText
        android:layout_centerVertical="true"
        android:id="@+id/getTheWordHard"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:ems="10"
        android:gravity="center"
        android:background="@drawable/round_edittext_purple"
        android:hint="Donne la bonne orthographe du mot"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/enteredTextHard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/speechButtonHard"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="" />

    <Button
        android:id="@+id/speechButtonHard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/countown_hard"
        android:layout_marginTop="40dp"
        android:background="@drawable/home_gradient_button_green"
        android:text="Ecoute et Ã©cris ce mot" />

    <RelativeLayout
      android:layout_width="100dp"
      android:layout_height="100dp">
        <ProgressBar
            android:id="@+id/progressBarIDHard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indeterminate="false"
            android:progressDrawable="@drawable/progress_bar_v2"
            android:background="@drawable/progress_bar_v2_background"
            style="?android:attr/progressBarStyleHorizontal"
           android:max="100"
           android:progress="0" />
        <TextView
            android:id="@+id/txtProgressIDHard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
           android:textSize="20sp"
           android:text="0"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/textView2Hard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="320dp"
        android:layout_marginTop="50dp"
        android:text="Mot de la semaine" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/arc_en_ciel"
        android:id="@+id/arcEnCiel"
        android:paddingBottom="300dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"/>


  </RelativeLayout>
</android.support.constraint.ConstraintLayout>