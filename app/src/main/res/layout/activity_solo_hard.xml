<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.insacvl.educations.SoloActivityEasy">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      tools:layout_editor_absoluteX="0dp"
      tools:layout_editor_absoluteY="-133dp">

    <ImageView
        style="@style/DarkModeHidden"
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_topbk" />

    <TextView
        android:id="@+id/countown_hard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="30"
        android:textSize="30dp"/>


    <EditText
        android:layout_centerVertical="true"
        android:id="@+id/getTheWordHard"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:ems="10"
        android:gravity="center"
        android:background="@drawable/round_edittext_purple"
        android:hint="Donne la bonne orthographe du mot"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/enteredTextHard"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="369dp"
        android:text="" />

    <Button
        android:id="@+id/speechButtonHard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300px"
        android:background="@drawable/home_gradient_button_green"
        android:text="Ecoute et Ã©cris ce mot" />

    <ProgressBar
        android:id="@+id/progressBarIDHard"
        android:layout_width="150px"
        android:layout_height="150px"
        android:layout_marginLeft="30px"
        android:layout_marginTop="30px"
        style="?android:progressBarStyleHorizontal"
        android:progress="0"
        android:text="TextView"
        android:progressDrawable="@drawable/circle"/>
    <TextView
        android:id="@+id/textView2Hard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="800px"
        android:layout_marginTop="50px"
        android:text="Difficile" />

  </RelativeLayout>
</android.support.constraint.ConstraintLayout>